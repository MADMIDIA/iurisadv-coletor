extends head.pug 

block printpageinfo
    h6 Anonimizador

block headerinput
    h4(style="color: var(--color-white);") Anonimizador

block allmain
    form#anonim-form(action="https://pe.inesc-id.pt/python/", method="post").row
        div.col-12.col-sm-6
            h4 Input
            input(type="file", name="file")
            button(type="submit") Correr
        div.col-12.col-sm-6
            h4 Output
            div#out
    style.
        mark::before{
            content: attr(role);
            font-size: 0.5rem;
            font-weight: bold;
            padding: 0.2rem;
        }
    script.
        document.getElementById("anonim-form").addEventListener("submit", (evt) => {
            evt.preventDefault();
            let button = document.getElementById("anonim-form").querySelector("button");
            button.disabled = true;
            let formData = new FormData(document.getElementById("anonim-form"));
            fetch("https://pe.inesc-id.pt/python/", {
                method: "POST",
                body: formData
            }).then(response => response.text()).then(text => {
                document.getElementById("out").innerHTML = text;
                button.disabled = false;
            });
        })
        

