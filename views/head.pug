doctype html
html(lang="en")
    -let awaitCounter = 0
    mixin await(url)
        span(data-await=url,id=`await-${awaitCounter}`).await-loading
        -awaitCounter++
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet",href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css",integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous")
        link(rel="stylesheet",href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css")
        link(href="https://fonts.googleapis.com/css2?family=Noto+Serif:ital,wght@0,400;0,700;1,400;1,700&display=swap",rel="stylesheet")
        style.
            body {
                font-family: 'Noto Serif', serif;
            }

            [data-tribunal="Supremo Tribunal Administrativo"]{
                --tribunal-color: #003f5c;
            }
            [data-tribunal="Supremo Tribunal de Justiça"]{
                --tribunal-color: #2f4b7c;
            }
            [data-tribunal="Tribunal da Relação do Porto"]{
                --tribunal-color: #665191;
            }
            [data-tribunal="Tribunal da Relação de Lisboa"]{
                --tribunal-color: #a05195;
            }
            [data-tribunal="Tribunal Constitucional"]{
                --tribunal-color: #d45087;
            }
            [data-tribunal="Tribunal Central Administrativo Sul"], [data-tribunal="Tribunal Central Administrativo Norte"]{
                --tribunal-color: #f95d6a;
            }
            [data-tribunal="Tribunal da Relação de Coimbra"]{
                --tribunal-color: #ff7c43;
            }
            [data-tribunal="Tribunal da Relação de Évora"]{
                --tribunal-color: #ffa600;
            }
            [data-tribunal="Tribunal da Relação de Guimarães"]{
                --tribunal-color: #febf01;
            }
            [data-tribunal="Tribunal dos Conflitos"]{
                --tribunal-color: #fecb02;
            }
        block head
    body
        block content
        script.
            for(let i = 0; i < !{awaitCounter}; i++){
                let elem = document.getElementById(`await-${i}`);
                fetch(elem.dataset.await).then(response => response.text()).then(text => {
                    elem.classList.remove("await-loading");
                    elem.innerHTML = text;
                });
            }
            